<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/dimen_30"
        android:background="@drawable/loading_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_18"
            android:layout_marginTop="@dimen/dimen_14"
            android:layout_marginRight="@dimen/dimen_18"
            android:layout_marginBottom="@dimen/dimen_14"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="#757575"
            android:textSize="@dimen/dimen_13" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1"
            android:layout_marginLeft="@dimen/dimen_5"
            android:layout_marginRight="@dimen/dimen_5"
            android:background="#D5D5D5" />

        <FrameLayout
            android:id="@+id/fl_dialog_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10"
            android:layout_marginTop="@dimen/dimen_20"
            android:layout_marginRight="@dimen/dimen_10"
            android:layout_marginBottom="@dimen/dimen_20">

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_dialog_cancel"
                android:layout_width="0dp"
                android:layout_height="@dimen/dimen_40"
                android:layout_weight="1.0"
                android:background="@drawable/dialog_cancel_bg"
                android:gravity="center"
                android:text="@string/cancel"
                android:textColor="@color/color_black"
                android:textSize="@dimen/dimen_13" />

            <TextView
                android:id="@+id/tv_dialog_confirm"
                android:layout_width="0dp"
                android:layout_height="@dimen/dimen_40"
                android:layout_weight="1.0"
                android:background="@drawable/dialog_confirm_bg"
                android:gravity="center"
                android:text="@string/confirm"
                android:textColor="@color/color_white"
                android:textSize="@dimen/dimen_13" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>