<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/dimen_20"
    android:paddingBottom="@dimen/dimen_32">

    <ImageView
        android:id="@+id/iv_register_close"
        android:layout_width="@dimen/dimen_24"
        android:layout_height="@dimen/dimen_24"
        android:layout_marginLeft="@dimen/dimen_10"
        android:src="@drawable/icon_close" />

    <TextView
        android:id="@+id/tv_register_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_50"
        android:text="@string/register"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/dimen_24" />

    <EditText
        android:id="@+id/et_user_phone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_48"
        android:layout_below="@id/tv_register_tag"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/dimen_48"
        android:layout_marginTop="@dimen/dimen_30"
        android:layout_marginRight="@dimen/dimen_48"
        android:background="@drawable/common_edit_corner_bg"
        android:gravity="center_vertical"
        android:hint="@string/register_user_phone_hint"
        android:inputType="phone"
        android:maxLines="1"
        android:paddingLeft="@dimen/dimen_14"
        android:paddingRight="@dimen/dimen_14"
        android:textColorHint="@color/color_666666"
        android:textSize="@dimen/dimen_14" />

    <TextView
        android:id="@+id/tv_send_verify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_user_phone"
        android:layout_marginLeft="@dimen/dimen_48"
        android:layout_marginTop="@dimen/dimen_10"
        android:layout_marginRight="@dimen/dimen_48"
        android:textSize="@dimen/dimen_14"
        android:textColor="#007aff"
        android:text="发送验证码" />

    <EditText
        android:id="@+id/et_user_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_48"
        android:layout_below="@id/tv_send_verify"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/dimen_48"
        android:layout_marginTop="@dimen/dimen_20"
        android:layout_marginRight="@dimen/dimen_48"
        android:background="@drawable/common_edit_corner_bg"
        android:gravity="center_vertical"
        android:hint="@string/register_user_name_hint"
        android:inputType="textVisiblePassword"
        android:maxLines="1"
        android:paddingLeft="@dimen/dimen_14"
        android:paddingRight="@dimen/dimen_14"
        android:textColorHint="@color/color_666666"
        android:textSize="@dimen/dimen_14" />

    <EditText
        android:id="@+id/et_user_pwd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_48"
        android:layout_below="@id/et_user_name"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/dimen_48"
        android:layout_marginTop="@dimen/dimen_20"
        android:layout_marginRight="@dimen/dimen_48"
        android:background="@drawable/common_edit_corner_bg"
        android:gravity="center_vertical"
        android:hint="@string/register_user_pwd_hint"
        android:inputType="textPassword"
        android:maxLines="1"
        android:paddingLeft="@dimen/dimen_14"
        android:paddingRight="@dimen/dimen_14"
        android:textColorHint="@color/color_666666"
        android:textSize="@dimen/dimen_14" />

    <EditText
        android:id="@+id/et_user_verify"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_48"
        android:layout_below="@id/et_user_pwd"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/dimen_48"
        android:layout_marginTop="@dimen/dimen_20"
        android:layout_marginRight="@dimen/dimen_48"
        android:background="@drawable/common_edit_corner_bg"
        android:gravity="center_vertical"
        android:hint="@string/register_user_verify_hint"
        android:inputType="number"
        android:maxLines="1"
        android:paddingLeft="@dimen/dimen_14"
        android:paddingRight="@dimen/dimen_14"
        android:textColorHint="@color/color_666666"
        android:textSize="@dimen/dimen_14" />

    <TextView
        android:id="@+id/tv_register"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_55"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/dimen_48"
        android:layout_marginRight="@dimen/dimen_48"
        android:background="@drawable/common_btn_corner_seleced_bg"
        android:enabled="false"
        android:gravity="center"
        android:padding="@dimen/dimen_10"
        android:text="@string/register"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/dimen_14" />


</RelativeLayout>