<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/dimen_10"
        android:layout_marginLeft="@dimen/dimen_10"
        app:radius_x="10"
        app:radius_y="10"
        android:background="@color/color_black"
        app:shape="round_rectangle" />

    <FrameLayout
        android:id="@+id/fl_image_message_shadow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/image_message"
        android:layout_alignTop="@id/image_message"
        android:layout_alignRight="@id/image_message"
        android:layout_alignBottom="@id/image_message"
        android:layout_gravity="center"
        android:visibility="gone">

        <ImageView
            android:id="@+id/image_message_shadow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#33000000"
            app:radius_x="10"
            app:radius_y="10"
            app:shape="round_rectangle" />

        <TextView
            android:id="@+id/image_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/color_white"
            android:textSize="@dimen/dimen_16" />

    </FrameLayout>

</RelativeLayout>