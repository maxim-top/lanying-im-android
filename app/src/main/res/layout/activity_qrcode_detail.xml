<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_15"
        android:layout_marginTop="@dimen/dimen_50"
        android:layout_marginRight="@dimen/dimen_15"
        android:background="@drawable/my_qrcode_corner_bg"
        android:paddingTop="@dimen/dimen_20"
        android:paddingBottom="@dimen/dimen_60"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">

            <top.maxim.im.common.view.ShapeImageView
                android:id="@+id/iv_user_avatar"
                android:layout_width="@dimen/dimen_50"
                android:layout_height="@dimen/dimen_50"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_20"
                android:layout_marginRight="@dimen/dimen_20"
                android:src="@drawable/default_avatar_icon"
                app:shape="circle" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen_30"
                android:layout_toRightOf="@id/iv_user_avatar"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/dimen_20" />

                <TextView
                    android:id="@+id/tv_user_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_5"
                    android:maxLines="1"
                    android:textColor="@color/color_355522"
                    android:textSize="@dimen/dimen_13" />

                <TextView
                    android:id="@+id/tv_nick_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_5"
                    android:maxLines="1"
                    android:textColor="@color/color_355522"
                    android:textSize="@dimen/dimen_13" />

            </LinearLayout>
        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_qrcode"
            android:layout_width="@dimen/dimen_220"
            android:layout_height="@dimen/dimen_220"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dimen_30" />
    </LinearLayout>
</LinearLayout>