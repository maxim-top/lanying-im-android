<?xml version="1.0" encoding="utf-8"?>
<top.maxim.im.common.view.ImmerseLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background"
    android:orientation="vertical">

    <View
        android:id="@+id/container_status_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_background"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/container_header"
            android:layout_width="match_parent"
            android:background="@color/color_background"
            android:layout_height="@dimen/dimen_56" />

        <View
            android:id="@+id/header_diver"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0.3"
            android:background="@color/color_E1E6EB"/>
    </LinearLayout>
</top.maxim.im.common.view.ImmerseLinearLayout>