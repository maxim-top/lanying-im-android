<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_selector"
        android:paddingLeft="@dimen/dimen_15"
        android:paddingTop="@dimen/dimen_10"
        android:paddingRight="@dimen/dimen_15"
        android:paddingBottom="@dimen/dimen_10">

        <top.maxim.im.common.view.ShapeImageView
            android:id="@+id/apply_avatar"
            android:layout_width="@dimen/dimen_48"
            android:layout_height="@dimen/dimen_48"
            android:layout_centerVertical="true"
            android:src="@drawable/default_avatar_icon"
            app:shape="circle" />

        <FrameLayout
            android:id="@+id/fl_handle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/tv_accept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/c8"
                android:padding="@dimen/dimen_10"
                android:text="处理" />

            <TextView
                android:id="@+id/apply_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:paddingTop="@dimen/dimen_5"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/dimen_16" />

        </FrameLayout>


        <LinearLayout
            android:id="@+id/ll_apply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_17"
            android:layout_marginRight="@dimen/dimen_17"
            android:layout_toLeftOf="@id/fl_handle"
            android:layout_toRightOf="@id/apply_avatar"
            android:orientation="vertical">

            <TextView
                android:id="@+id/apply_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="start|center_vertical"
                android:maxLines="1"
                android:textColor="@color/color_black"
                android:textSize="@dimen/dimen_16" />

            <TextView
                android:id="@+id/apply_reason"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="start|center_vertical"
                android:maxLines="1"
                android:textColor="@color/color_black"
                android:textSize="@dimen/dimen_12" />


        </LinearLayout>


    </RelativeLayout>


</LinearLayout>