<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_chat_doc"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_selector"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_72"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimen_15"
        android:paddingRight="5dp">

        <LinearLayout
            android:id="@+id/cd_doc_file_choice_lin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dimen_8"
            android:gravity="center_vertical|start">

            <CheckBox
                android:id="@+id/cb_doc_file_choice"
                android:layout_width="@dimen/dimen_23"
                android:layout_height="@dimen/dimen_23"
                android:background="@drawable/checkbox_style"
                android:button="@null"
                android:clickable="false"
                android:focusable="false" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_doc_icon"
            android:layout_width="@dimen/dimen_40"
            android:layout_height="@dimen/dimen_40"
            android:layout_gravity="center_vertical"
            android:src="@drawable/chat_file_default_icon" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimen_10"
            android:layout_weight="9"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_doc_title"
                android:layout_width="@dimen/dimen_200"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:ellipsize="middle"
                android:singleLine="true"
                android:textSize="@dimen/dimen_18" />

            <TextView
                android:id="@+id/tv_doc_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_doc_title"
                android:layout_alignParentLeft="true"
                android:textSize="@dimen/dimen_14" />

            <TextView
                android:id="@+id/tv_doc_create_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_doc_size"
                android:textSize="@dimen/dimen_12" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>