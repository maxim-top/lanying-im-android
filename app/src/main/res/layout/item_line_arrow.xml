<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/item_arrow_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50"
        android:background="@color/color_white">

        <TextView
            android:id="@+id/item_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dimen_15"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/dimen_16" />

        <ImageView
            android:id="@+id/item_right_arrow"
            android:layout_width="@dimen/dimen_6"
            android:layout_height="@dimen/dimen_10"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dimen_12"
            android:layout_marginLeft="@dimen/dimen_12"
            android:layout_marginEnd="@dimen/dimen_15"
            android:layout_marginRight="@dimen/dimen_15"
            android:background="@drawable/common_arrow_right"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/item_end_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/item_right_arrow"
            android:gravity="center_vertical|end"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/dimen_16" />

    </RelativeLayout>

</FrameLayout>